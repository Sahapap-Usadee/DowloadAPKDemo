<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
      />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dowload hht"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDow_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dowload Scanner"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDow_gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dowload Gen"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDow_pdfPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dowload PDFPrint"/>
</LinearLayout>